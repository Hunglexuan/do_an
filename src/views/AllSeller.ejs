    <script>
        $(document).ready(function() {
            loaddata()
        });

        $('#productSearch').keyup(function(event) {
            event.preventDefault();
            localStorage.setItem('searchListSeller', JSON.stringify(document.getElementById('productSearch').value));
            loaddata();
        });

        function loaddata() {
            var text = localStorage.getItem('searchListSeller').replaceAll('"', '');
            $.ajax({
                type: "GET",
                dataType: "json",
                data: {
                    name: text
                },
                url: "/api/user/searchSeller",
                success: function(data) {
                    var listdata = data.data.listUsers;

                    document.getElementById('productSearch').value = text;

                    if (listdata != '') {
                        document.getElementById('findShop').innerHTML = '';
                        document.getElementById('allseller').innerHTML = '';
                        for (var i = 0; i < listdata.length; i++) {
                            document.getElementById('allseller').innerHTML += '<div class="col-md-3 col-sm-6 mb-4 pb-2" onclick="goTo(' + "'" + listdata[i].id + "'" + ')">' +
                                '<div class="list-card bg-white overflow-hidden h-100 position-relative item-content" style="border: 1px solid #d7d7d7; border-radius: 6px;">' +
                                '<div class="list-card-image">' +
                                '<div class="member-plan position-absolute"></div>' +
                                '<a> <img src="image/list/1.png" class="img-fluid item-img"> </a>' +
                                '</div>' +
                                '<div class="p-3 position-relative">' +
                                '<div class="list-card-body">' +
                                '<h6 class="mb-1"><a class="text-black">' + listdata[i].name + '</a></h6>' +
                                '<p class="text-gray mb-3">' + listdata[i].address + '</p>' +
                                '</div></div> </div> </div>';
                        }
                    } else {
                        document.getElementById('allseller').innerHTML = '';
                        document.getElementById('findShop').innerHTML = '<section class="section pt-5 pb-5 osahan-not-found-page"> <div class="container"> <div class="row"> <div class="col-md-12 text-center pt-5 pb-5"> <img class="img-fluid" src="image/notFind.png" alt="find"> <h1 class="mt-2 mb-2">Không tìm thấy quán</h1> <p>Ồ! Có vẻ như trang bạn đang cố gắng tìm quán. <br>  Vui lòng bắt đầu lại</p> <a class="btn btn-primary btn-lg" href="/">Về trang chủ</a> </div> </div> </div> </section>'
                    }

                }
            });
        }

        function goTo(shopIdClick) {
            let id = "?id=" + shopIdClick;
            window.location.href = '/ShopDetail' + id;
        }
    </script>

