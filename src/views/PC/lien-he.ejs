        var form = document.getElementById("contact-form");

        form.addEventListener("submit", (event) => {
            event.preventDefault();

            //2.
            let mail = new FormData(form);

            //3.
            sendMail(mail);
        })

        function sendMail(mail) {
            //1.
            fetch("http://localhost:3999/send", {
                method: "post", //2.
                body: mail, //3.

            }).then((response) => {
                return response.json();
            })
        }
