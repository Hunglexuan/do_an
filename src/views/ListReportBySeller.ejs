    <script>
      // /load data
      var sellerID = localStorage.getItem("sellerId").replaceAll('"', '');
      $(document).ready(function () {
        $("#dataTable").DataTable({

          ajax: function (data, callback, settings) {
            $.ajax({
              url: "http://localhost:3999/api/report/searchByShop?id="+sellerID,
            }).then(function (response, textStatus, jqXHR) {
              let data = response.data.listReport;
              data.forEach((val, idx) => {
                val.no = idx + 1;
              });
              callback({ data: data });
            });
          },

          columns: [
            { data: "no" },
            { data: "user" },
            { data: "shop" },
            { data: "type_report"},
            { data: "content" },

            { data: "" },
          ],
          columnDefs: [
            {
              targets: -1,
              render: function (data, type, row, meta) {
                return (
                  '<input type="button" class="show-report-detail btn-primary mr-3" data-toggle="modal" data-target="#infoReport" onclick="getInfo(' +
                  "'" +
                  row.user +
                  "'" +
                  "," +
                  "'" +
                  row.shop +
                  "'" +
                  "," +
                  "'" +
                  row.type_report +
                  "'" +
                  "," +
                  "'" +
                  row.content +
                  "'" +
                  ')" idReport="' +
                  row.id +
                  '" value="Chi Tiết"/>'
                );
              },
            },
          ],
        });
      });

