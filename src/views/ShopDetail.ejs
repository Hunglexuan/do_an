        function sendReport() {

            var userId = localStorage.getItem('userId').replaceAll('"', '');
            var params = (new URL(document.location)).searchParams;
            var idURL = params.get('id');
            var type = document.getElementById('dropdownMenuButton').value;
            var text_report = document.getElementById('text_report').value;
            console.log(type + ' ' + text_report + ' ' + idURL);

            $.ajax({
                url: '/api/report/create',
                method: 'POST',
                data: {
                    type_report: type,
                    content: text_report,
                    shop_id: idURL,
                    user_id: userId,
                },
            }).then(function(data) {
                if (data.message == 'SUCCESS') {
                    alert('success');
                    // window.location.href = "/"
                } else {
                    alert("Update fail");
                }
            })
        }

        function loaddata() {

            var params = (new URL(document.location)).searchParams;
            var idURL = params.get('id');
            $.ajax({
                type: "GET",
                dataType: "json",
                data: {
                    id: idURL
                },
                url: "/api/user/getbyId",
                success: function(data) {
                    document.getElementById('inforShop').innerHTML = '<img class="img-fluid mr-3 float-left" alt="osahan" src="image/1.jpg"> <h2 class="text-white" style="padding-top: 25px;"> ' + data.data.name + '</h2> <p class="text-white mb-1"><i class="icofont-location-pin"></i>' + data.data.address + '<span class="badge badge-success">OPEN</span><button type="button" id="SaveUpdate" data-toggle="modal" data-target="#basicModal" class="btn btn-outline-danger ml-3 fa fa-flag" style="float: right;"> </button></p>';
                }
            });

            $.ajax({
                url: "http://localhost:3999/api/product/searchSellerproduct?id=" + idURL,
                type: "GET",

            }).then(function(data) {
