        function loadFeedback() {
            var params = (new URL(document.location)).searchParams;
            var idURL = params.get('id');
            $.ajax({
                type: "GET",
                dataType: "json",
                data: {
                    id: idURL
                },
                url: "/api/feedback/searchShopFeedback",
                success: function(data) {
                    var list = data.data.listFeedback;


                    for (var j = 1; j <= 5; j++) {
                        if (j <= data.data.count / data.data.total) {
                            document.getElementById('rateTotal').innerHTML += '<label><i class="icofont-ui-rating" style="color: red !important;"></i></label>';
                        } else {
                            document.getElementById('rateTotal').innerHTML += '<label><i class="icofont-ui-rating"></i></label>';
                        }

                    }

                    document.getElementById('rateStar').innerHTML = data.data.count;
                    document.getElementById('rateOfStar').innerHTML = 'Đánh giá ' + (data.data.count / data.data.total).toFixed(2) + ' trên 5';
                    document.getElementById('rateOf5').innerHTML = ((data.data.star_5 / data.data.total).toFixed(2)) * 100 + '%';
                    var color5 = data.data.star_5 / data.data.total;
                    document.getElementById('rateColor5').style.width = color5 * 100 + '%';

                    document.getElementById('rateOf4').innerHTML = ((data.data.star_4 / data.data.total).toFixed(2)) * 100 + '%';
                    var color4 = data.data.star_4 / data.data.total;
                    document.getElementById('rateColor4').style.width = color4 * 100 + '%';

                    document.getElementById('rateOf3').innerHTML = ((data.data.star_3 / data.data.total).toFixed(2)) * 100 + '%';
                    var color3 = data.data.star_3 / data.data.total;
                    document.getElementById('rateColor3').style.width = color3 * 100 + '%';

                    document.getElementById('rateOf2').innerHTML = ((data.data.star_2 / data.data.total).toFixed(2)) * 100 + '%';
                    var color2 = data.data.star_2 / data.data.total;
                    document.getElementById('rateColor2').style.width = color2 * 100 + '%';

                    document.getElementById('rateOf1').innerHTML = ((data.data.star_1 / data.data.total).toFixed(2)) * 100 + '%';
                    var color1 = data.data.star_1 / data.data.total;
                    document.getElementById('rateColor1').style.width = color1 * 100 + '%';

                    for (var i = 0; i < list.length; i++) {
                        var text = list[i].user_id;
                        let content = list[i].content;
                        let rate = list[i].rate;


                        var d = new Date(list[i].createdAt);
                        var n;
                        if (d.getUTCDate() < 10) {
                            n = '0' + d.getUTCDate();
                        } else {
                            n = d.getUTCDate();
                        }
                        var m;
                        m = d.getUTCMonth().toLocaleString('default', {
                            month: 'short'
                        });
                        var y = d.getUTCFullYear();
                        var dob = n + ', ' + m + ' ' + y;





                        $.ajax({
                            type: "GET",
                            dataType: "json",
                            data: {
                                id: text
                            },
                            url: "/api/user/getbyId",

                            success: function(data) {

                                let star = '';
                                for (var j = 1; j <= 5; j++) {
                                    if (j <= rate) {
                                        star += '<label><i class="icofont-ui-rating" style="color: red !important;"></i></label>';
                                    } else {
                                        star += '<label><i class="icofont-ui-rating"></i></label>';
                                    }

                                }

                                document.getElementById('feedbackUser').innerHTML += '<div class="reviews-members pt-4 pb-4"> <div class="media"> <a href="#"> <img alt="Generic placeholder image" src="' + data.data.avatar + '" class="mr-3 rounded-pill"></a> <div class="media-body"> <div class="reviews-members-header"> <span class="star-rating float-right">' + star + '</span> <h6 class="mb-1"><a class="text-black" href="#">' + data.data.name + '</a></h6> <p class="text-gray">' + dob + '</p> </div> <div class="reviews-members-body"> <p>' + content + '</p> </div> </div> </div> </div> <hr>';


                            }

                        })
                    }
                }
            });
        }

        function checkfeedback() {

            var userId = localStorage.getItem('userId').replaceAll('"', '');
            var params = (new URL(document.location)).searchParams;
            var shopId = params.get('id');

            $.ajax({
                type: "GET",
                data: {
                    user_id: userId,
                    shop_id: shopId,
                },
                url: "/api/feedback/check",
                success: function(data) {
                    if (data.data == true) {
                        document.getElementById('checkFeedback').innerHTML = 'Bạn chưa mua hàng!!!';
                    } else {
                        document.getElementById('checkFeedback').innerHTML = '<h5 class="mb-4">Để lại phản hồi</h5> <p class="mb-2">Xếp hạng địa điểm</p> <div class="mb-4"> <span class="star-rating"> <label data-index="1" class="rating" id="rate1"><i class="icofont-ui-rating icofont-2x"></i></label> <label data-index="2" class="rating" id="rate2"><i class="icofont-ui-rating icofont-2x"></i></label> <label data-index="3" class="rating" id="rate3"><i class="icofont-ui-rating icofont-2x"></i></label> <label data-index="4" class="rating" id="rate4"><i class="icofont-ui-rating icofont-2x"></i></label> <label data-index="5" class="rating" id="rate5"><i class="icofont-ui-rating icofont-2x"></i></label> </span> </div> <form> <div class="form-group"> <label>Thông tin phản hồi của bạn</label> <textarea class="form-control" id="textFeedback"></textarea> </div> <div class="form-group"> <button class="btn btn-primary btn-sm" type="button" onclick="feedback()"> Gửi phản hồi </button> </div> </form>';
                    }
                }
            })
        }

        var x = 0;

        $(document).on('click', '.rating', function() {
            var index = $(this).data("index");
            x = index;
        });

        $(document).on('mouseenter', '.rating', function() {
            var index = $(this).data("index");
            for (var j = 0; j <= 5; j++) {
                if (j <= index) {
                    $('#rate' + j).css('color', 'red');
                } else if (j > index) {
                    $('#rate' + j).css('color', 'black');
                }
            }
        });

        function feedback() {

            var userId = localStorage.getItem('userId').replaceAll('"', '');
            var params = (new URL(document.location)).searchParams;
            var shopId = params.get('id');

            $.ajax({
                url: '/api/feedback/create',
                method: 'POST',
                data: {
                    user_id: userId,
                    shop_id: shopId,
                    content: document.getElementById('textFeedback').value,
                    rate: x,
                },
            }).then(function(data) {
                if (data.message == 'SUCCESS') {
                    document.getElementById('feedbackUser').innerHTML = '';
                    document.getElementById('textFeedback').value = '';
                    loadFeedback();
                } else {
                    alert('khong thanh cong');
                }
            })
        }
    </script>

