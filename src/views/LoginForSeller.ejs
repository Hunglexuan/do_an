<script>
    function checkBlank() {
        if (($("#inputEmailAddress").val() == "") || ($("#inputPassword").val() == "") ) {
            return alert("Please Enter Email or Password")
        }
        
    }

    $("#btnLogin").click(function() {
        
        checkBlank();
        console.log("123123")
        console.log($("#inputEmailAddress").val())
        console.log($("#inputPassword").val())
        $.ajax({
            type: "POST",
            url: "/api/auth/login",
            data: {
                email: $("#inputEmailAddress").val(),
                password: $("#inputPassword").val()
            },
        }).then(function (data) {
            if (data.message == "SUCCESS") {
                window.location.href = "/index"
                alert("Login Success!")
               
            } else {
                alert("Login Fail!")
            }
        })
    });
</script>

